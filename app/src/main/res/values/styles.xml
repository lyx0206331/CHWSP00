<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="CustomDialog" parent="Base.V21.ThemeOverlay.AppCompat.Dialog">
        <item name="android:background">@android:color/transparent</item><!--对话框背景色-->
        <item name="android:windowBackground">@android:color/transparent</item><!--弹出后的背景色-->
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFrame">@null</item><!--边框-->
        <item name="android:windowIsFloating">true</item><!--是否浮现在activity之上-->
        <item name="android:windowIsTranslucent">true</item><!--半透明-->
        <item name="android:backgroundDimEnabled">true</item><!--模糊-->
    </style>

    <style name="MiddleTextRadioButtonStyle">
        <item name="android:textSize">@dimen/font_size_m</item>
        <item name="android:textColor">@drawable/selector_black_white_font</item>
        <item name="android:background">@drawable/selector_blue_white_bg</item>
        <item name="android:gravity">center</item>
        <item name="android:button">@null</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="SmallTextRadioButtonStyle">
        <item name="android:textSize">@dimen/font_size_s</item>
        <item name="android:textColor">@drawable/selector_black_white_font</item>
        <item name="android:background">@drawable/selector_blue_white_bg</item>
        <item name="android:gravity">center</item>
        <item name="android:button">@null</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="MiddleBlackTextStyle">
        <item name="android:textSize">@dimen/font_size_m</item>
        <item name="android:textColor">@color/black4e4e4e</item>
    </style>

    <style name="SmallBlackTextStyle">
        <item name="android:textSize">@dimen/font_size_s</item>
        <item name="android:textColor">@color/black4e4e4e</item>
    </style>

    <style name="SmallBlueTextStyle">
        <item name="android:textSize">@dimen/font_size_s</item>
        <item name="android:textColor">@color/blue169bd5</item>
    </style>

    <style name="LargeBlueTextStyle">
        <item name="android:textSize">@dimen/font_size_l</item>
        <item name="android:textColor">@color/blue169bd5</item>
    </style>

    <style name="LargeWhiteTextStyle">
        <item name="android:textSize">@dimen/font_size_l</item>
        <item name="android:textColor">@color/white</item>
    </style>

</resources>